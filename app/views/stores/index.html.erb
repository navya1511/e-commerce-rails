<p id="notice"><%= notice %></p>
<div class="cart">
<h1 style="color:#fe7865;  text-align:center;">Stores</h1>
<br>
<br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Color</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.category %></td>
        <td><%= store.color %></td>
        <td><%= store.description %></td>
        <td><%= store.price %></td>
        <td><%= link_to 'Show', store, class:"cart_button" %></td>
        <td><%= link_to 'Edit', edit_store_path(store) , class:"cart_button"%></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } , class:"cart_button"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>

<%= link_to 'New Store', new_store_path , class:"cart_button" %>
