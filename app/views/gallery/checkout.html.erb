<%= flash[:notice] %>
<div class="checkout_card">
    <div class="leftside">
          <img
            src="/assets/4.jpg"
            class="product"
           
          />
        </div>
        <div class="rightside">
            
          <%= form_with url: "/gallery/checkout" do |f|%>
            <h1 style="color:#fe7865; font-size:40px;">CheckOut</h1>
            <br>
            <h2 style="color:#fe7865; font-size:20px;">Payment Information</h2>
            <br>
            <p>First Name</p>
            <%= f.text_field :first_name, class:"inputbox"%>
            <p>Last Name</p>
            <%= f.text_field :last_name, class:"inputbox"%>
            <p>Card Number</p>
            <%= f.number_field :card_number, class:"inputbox"%>

           <div class="expcvv">

            <p class="expcvv_text">Expiry</p>
            <select name="check[month]"  class="inputbox">
		<option selected value="01">January 
		<option  value="02">Febuary
		<option  value="03">March
		<option  value="04">April 
		<option  value="05">May 
		<option  value="06">June 
		<option  value="07">July 
		<option  value="08">August 
		<option  value="09">September 
		<option  value="10">October 
		<option  value="11">November 
		<option  value="12">December 
		        </select>
		<select name="check[year]" class="inputbox">
		<option selected value="2013">2013
		<option  value="2014">2014
		<option  value="2015">2015
		<option  value="2016">2016
		<option  value="2017">2017
		<option  value="2018">2018
		<option  value="2019">2019
		<option  value="2020">2020
		<option  value="2021">2021
		<option  value="2022">2022
		<option  value="2023">2023
		<option  value="2024">2024
		<option  value="2025">2025
	</select>

            <p class="expcvv_text2">CVV</p>
            <%= f.number_field :cvv, class: "inputbox" %>
        </div>
            <p></p>
            <%= f.submit "CheckOut" , class: "button" %>
          <% end %>
     </div>
</div>
      